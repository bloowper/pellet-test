                    window.showNotification('Wiadomo≈õƒá zosta≈Ça wys≈Çana! Odpowiemy w ciƒÖgu 24 godzin.', 'success');

                    // Reset form
                    contactForm.reset();

                    // Reset button
                    submitButton.textContent = originalText;
                    submitButton.disabled = false;
                }, 2000);
            });
        }
    });
</script>
